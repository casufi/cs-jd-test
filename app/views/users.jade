section.users
  header
    h1 Github view
    h2 Github users
  section.userlabels
    ul.lablesshowcase
      li(ng-repeat="user in usersctl.users")
        a(ng-href="user/{{user.login}}")
          figure
            div.left.round.avatar-container
              img(ng-src="{{user.avatar_url}}", alt="{{user.login}}")
            div.right.login-container
              div.login-text {{user.login}}
