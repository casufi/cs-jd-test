doctype html
html(ng-app="myApp")
  head
    base(href="#{basePath}")
    title(ng-bind="Page.getTitle()+'|'+Page.getHeader()")

    meta(charset="utf-8")
    meta(name="fragment" content="!")
    meta(name="viewport", content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0")
    // Have to read about fragment  anf viewport tags

    // build:css styles/main.css
    // bower:css
    link(rel='stylesheet', href='/bower_components/normalize.css/normalize.css')
    // endbower
    link(rel="stylesheet", href="/styles/fonts.css")
    link(rel="stylesheet", href="/styles/main.css")
    link(rel="stylesheet", href="/styles/users.css")
    link(rel="stylesheet", href="/styles/user.css")
    // endbuild

  //(ng-controller="GlobalCtrl")
  body
    div.center
      a(ng-if="!Page.getMain()", ng-href="/")
        h1(ng-bind="Page.getTitle()")
      h1(ng-if="Page.getMain()", ng-bind="Page.getTitle()")
      h2(ng-bind="Page.getHeader()")
      div.place.fadein-animation(ng-view)

    // build:js scripts/main.js
    // bower:js
    script(src='/bower_components/angular/angular.js')
    script(src='/bower_components/angular-resource/angular-resource.js')
    script(src='/bower_components/angular-cookies/angular-cookies.js')
    script(src='/bower_components/angular-route/angular-route.js')
    script(src='/bower_components/angular-animate/angular-animate.js')
    // endbower

    script(src='/scripts/app.js')

    script(src='/scripts/configs/config.js')
    script(src='/scripts/configs/http.js')
    script(src='/scripts/configs/routes.js')
    script(src='/scripts/configs/run.js')
    script(src='/scripts/directives/imgonload.js')
    script(src='/scripts/factories/page.js')
    script(src='/scripts/factories/github.js')

    script(src='/scripts/controllers/global.js')
    script(src='/scripts/controllers/users.js')
    script(src='/scripts/controllers/user.js')
    script(src='/scripts/controllers/repo.js')
    // endbuild
