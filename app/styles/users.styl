.lablesshowcase
  width: 100%
  list-style: none
  display: flex
  justify-content: flex-start
  flex-flow: row wrap

  a:link
  a:visited
  a:hover
    text-decoration: none
    color: rgb(0,0,0)

  li
    display: block
    width: 230px
    height: 100px
    border: 2px solid rgb(200,200,200);
    border-radius: 15px
    margin: 5px
    padding: 5px
    transition: top 0.3s ease
    position:relative
    top: 0px
    flex-shrink: 0
    flex-grow: 0

    &:hover
      transition: top 0s
      top: -3px

    figure
      width: 100%
      margin: 0px

.avatar-container
  overflow: hidden
  width: 50px
  height: 50px
  margin: 3px

  img
    width: 100%
    height: auto

.login-container
  height: 50px
  width: 150px
  position:relative

.login-text
  font-size: 1.2em
  font-weight: 600
  position: absolute
  width: 150px
  top: 50%
  left: 3px
  transform: translate(0px,-50%)

.email
  padding-top: 5px
  padding-left: 20px
