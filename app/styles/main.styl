*
  box-sizing: border-box

body
  font-family: 'Open Sans', sans-serif
  background-color: rgb(200,200,200)
  padding: 10px

.center
  max-width:1080px
  min-width:300px
  margin: 0px auto
  padding-top:10px
  padding-bottom:40px
  padding-left:20px
  padding-right:20px
  background-color:white
  border-radius: 5px

.placeholder
  background-color: white
  height: 100vh
  width: 100vw

h1
  font-size: 2em
  padding-bottom: 15px
  border-bottom: 2px solid rgb(200,200,200)

h2
  font-size: 1.3em
  padding-bottom: 10px
  border-bottom: 1px solid rgb(200,200,200)

h3
  font-size:1.1em

.round
  border-radius: 50%

.left
  float: left

.right
  float: right

.clearfix
  clear: both

.imgnotloaded
  display: none !important

.imgloaded
  display: block !important;
